<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Add a new task</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <div class="container-fluid">
                <div class="row">
                    <div class="form-floating mb-3 px-0">
                        <input type="text" id="createTitle" class="form-control" placeholder="Draw a painting">
                        <label for="floatingInput">Title</label>
                    </div>
                </div>
                <div class="row">
                    <div class="form-floating mb-3 px-0">
                        <input type="datetime-local" id="createDueDate" class="form-control">
                        <label for="floatingInput">Due Date</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" id="createSubmit" class="btn btn-primary">Add Task</button>
        </div>
    </div>
</div>